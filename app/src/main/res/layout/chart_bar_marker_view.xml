<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/bar_marker_height"
    android:background="@drawable/marker_background">

    <TextView
        android:id="@+id/marker_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/bar_marker_margin_side"
        android:layout_marginRight="@dimen/bar_marker_margin_side"
        android:layout_marginTop="@dimen/bar_marker_margin_top"
        android:ellipsize="end"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textSize="@dimen/bar_marker_text_size"/>

</RelativeLayout>
